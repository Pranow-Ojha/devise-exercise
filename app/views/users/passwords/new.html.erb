<div class="container-fluid">
  <div class="row p-wrapper">
    <div class="col-xs-12 col-sm-12 col-md-12">

      <div class="col-md-4 col-md-offset-4" style="margin-top:10%;">

        <div class="text-center">

              <h1 style="margin:0px auto; width: 72%;">

                    <%= link_to (image_tag "myLogo.png", alt: "peritus"),root_path %></h1>


          <h4>Password Assistance</h4>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :validate => "true" }) do |f| %>

              <div class="form-group">
                  <%= f.text_field :email, class: 'form-control', placeholder: "Enter email", :validate => "true"   %>
              </div>

              <div class="actions">
                <%= f.submit "Reset Password", class: "btn btn-lg btn-primary btn-block p-roundedC" %>
              </div>
          <% end %>
          </br>

        </div>
      </div>
    </div>
  </div>
</div>



