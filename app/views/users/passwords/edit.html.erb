<div class="container-fluid">
  <div class="row p-wrapper">
    <div class="col-xs-12 col-sm-12 col-md-12">

      <div class="col-md-4 col-md-offset-4" style="margin-top:10%;">

        <div class="text-center">

          <h1 style="margin:0px auto; width: 72%;">

            <%= link_to (image_tag "myLogo.png", alt: "peritus"),root_path %></h1>


          <h4>Password Assistance</h4>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put},validate: false) do |f| %>
              <!--<%#= devise_error_messages! %>-->
              <%= f.hidden_field :reset_password_token %>


              <div class="form-group">

                  <%= f.password_field :password, class: 'form-control', placeholder: "New Password", tabindex: "2" %>
              </div>

              <div class="form-group">

                  <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Confirm new password", tabindex: "2" %>
              </div>

              <div class="actions">
                <%= f.submit "Change my password",  class: "btn btn-lg btn-primary btn-block p-roundedC" %>

              </div>
          <% end %>
          </br>


        </div>
      </div>
    </div>
  </div>
</div>